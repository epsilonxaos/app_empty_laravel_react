// jsconfig.json at project root
{
	"compilerOptions": {
		"checkJs": true,
		"jsx": "preserve",
		"module": "ES2022",
		"paths": {
			"#types/*": ["resources/js/react/types/*"],
			"@assets/*": ["resources/js/react/assets/*"],
			"@components/*": ["resources/js/react/components/*"],
			"@contexts/*": ["resources/js/react/contexts/*"],
			"@img/*": ["resources/img/*"],
			"@modules/*": ["resources/js/react/modules/*"],
			"@pages/*": ["resources/js/react/pages/*"],
			"@routes/*": ["resources/js/react/routes/*"],
			"@services/*": ["resources/js/react/services/*"],
			"@utils/*": ["resources/js/react/utils/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"],
	"include": [
		"resources/js/react/**/*.{ts|jsx|js|tsx}",
		"resources/js/react/**/**/*.{ts|jsx|js|tsx}",
		"resources/js/react/**/**/**/.{ts|jsx|js|tsx}"
	]
}
